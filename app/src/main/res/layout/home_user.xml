<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100px"
            android:layout_height="100px" app:srcCompat="@android:color/background_dark"
            android:id="@+id/home_user_avatar" android:layout_weight="1"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/home_user_name" android:layout_weight="1"/>
</LinearLayout>